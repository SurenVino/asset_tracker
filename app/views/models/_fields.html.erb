

<div>
	<label>Manufacturer</label>
	<%= select :model, :manufacturer_id, Manufacturer.find(:all).collect {|n| [ n.name, n.id ] } %>
	<%= error_message_on :model, :manufacturer %>
</div>

<div>
	<label>Kind</label>
	<%= select :model, :kind_id, Kind.find(:all).collect {|n| [ n.name, n.id ] } %>
	<%= error_message_on :model, :kind %>
</div>

<div>
	<label>Name</label>
	<%= f.text_field :name %>
	<%= error_message_on :model, :name %>
</div>