<h1><%= @title = h(@user.login) %></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'fields', :locals => {:f => f} %>

  <p>
    <%= button_submit %>
  </p>
<% end %>

<h2>Assets that <%= h(@user.login) %> is responsible for.</h2>

<table>
	<thead>
  <tr>
	<td>Manufacturer</td>
	<td>Model</td>
	<td>Type</td>
	<td>Serial</td>
	<td>Notes</td>
	<td>Actions</td>
  </tr>
	</thead>
	<tbody>
<% for asset in @user.assets %>
	<%= render :partial => 'assets/row', :locals => {:asset => asset} %>
<% end %>
	</tbody>
</table>